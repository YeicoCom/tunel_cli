#!/bin/bash -e

SCRIPT_PATH=$(dirname $BASH_SOURCE)
SCRIPT_PATH=$(realpath $SCRIPT_PATH)
cd $SCRIPT_PATH

panic() { 
    >&2 echo Panic: $@
    exit 1
}

export VERSION=$(cat ./version)

case "$OSTYPE" in
    darwin*)  OSNAME="darwin" ;; 
    linux*)   OSNAME="linux" ;;
    *) panic "Unsupported OS: $OSTYPE" ;;
esac

$OSNAME/tunel $@
