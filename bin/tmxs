#!/bin/bash

SCRIPT_PATH=$(dirname $BASH_SOURCE)
SCRIPT_PATH=$(realpath $SCRIPT_PATH)
cd $SCRIPT_PATH
source tmxe

echo $$ > server.pid

while true
do
    echo $(date +"%Y-%m-%dT%H:%M:%S") $(hostname)
    $YEICO_LINK -client -pwd=$HOME/.tunelmx/server -uri=$TUNEL_WS?role=server\&os=linux false
    sleep 2
done
