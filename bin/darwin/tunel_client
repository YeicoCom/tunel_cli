#!/bin/bash

SCRIPT_PATH=$(dirname $BASH_SOURCE)
SCRIPT_PATH=$(realpath $SCRIPT_PATH)
cd $SCRIPT_PATH

source ./tunel_environ

while true
do
    echo $(date +"%Y-%m-%dT%H:%M:%S") $(hostname)
    grep enabled client.link || fswatch --one-event $SCRIPT_PATH
    grep enabled client.link && $YEICO_LINK -client -pwd=$HOME/.tunelmx -uri=$TUNEL_WS?role=client\&os=darwin false
    sleep 2
done
